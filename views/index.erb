    <h2> Welcome to PizzaShop</h2>
 
  <div class="row">
  
      <% @items.each do |pizza| %>
      <div class="col-md-3">
        <div>
          <%= pizza.title %>
        </div>

        <div>
          <img src="<%= pizza.path_to_image %>" hspace="1%" vspace="1%" width="200" height="200" />
        </div>

        <div>
          <%= pizza.description %>
        </div>

      </div>
      <% end %>
  </div>

